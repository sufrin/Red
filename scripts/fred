# Behave as client/server using a fifo
# (avoids the need to re-package the app while testing)
CP=/Users/sufrin/local/scalalib/scala-swing.jar:/Users/sufrin/GitHomes/RegexKit/out/artifacts/regexkit.jar:./out/production/Jed
D="-Dapplered.app=true -DRed.AppleRed.level=ALL -DJed.Session.level=ALL -DJed.Sessions.level=ALL -DJed.Server.level=ALL -DJed.UI.level=ALL"
J="-Xdock:name=iRed-ClientServer -Xdock:icon=/Users/sufrin/bin/cred.png"
env REDPORT=33445 JAVACMD=java JAVA_OPTS="$D $J" \
    scala -cp $CP Red.AppleRed "$@" &

