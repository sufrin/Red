#
#       Report unhandled input
#
PROFILE:bool    quietignore  "Features" "Silence Undefined Keys" false

# 
(def (UI:unhandledInput key)
     (if quietignore
         ()
         (popup "Undefined Keystroke: " (inputToString key))))
