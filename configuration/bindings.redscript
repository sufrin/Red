#############################################################################
#
#
#       Declare features of the UI
#
constant shell:Commands (list "wc" "ls -lt" "date" "printenv")

(def (UI:pipeShellCommands path) shell:Commands)

#
#       Latex menu is to be present for .tex files / what's on the menu
#
(def (UI:needsLatex      path)
     (if (endsWith path ".tex") (seq (LOADTEX:) true) false))
     
(def (UI:latexBlockTypes path) latex:blocktypes)


(constant latex:blocktypes
  `(      foil     itemize   enumerate        -
          note     exercise  answer           -
          code     "-code"   "code*"  alltt   -
          center   verbatim  comment  smaller -
          question part      ans
  )
)

# Latex snippets are on the \begin{...}/Tex menu 
(def (UI:latex:Snippets path) latex:Snippets)

variable  latex:Snippets ()

(constant latex:snippet
  (form (env tag text)
        (:= latex:Snippets (:: (tag . text) latex:Snippets))
        ()))

# bind a keystroke to a (Tex) styling action
(def (TEXSTYLE: key cmd) 
     (log key cmd)
     (UI:keys ( key . (command cmd) ) ))

(def (LOADTEX:)
     # Main keyboard
     (TEXSTYLE: "SLASH(C)"           "styleAsItalic")     
     (TEXSTYLE: "SLASH(SC)"          "styleAsSlant")
     (TEXSTYLE: "BACKSLASH(SC)"      "styleAsEmph")
     (TEXSTYLE: "BACKSLASH(C)"       "styleAsBold")
     # Numeric keyboard
     (TEXSTYLE: "Numpad*@Numpad"     "styleAsBold")
     (TEXSTYLE: "Numpad*(S)@Numpad"  "styleAsEmph")
     (TEXSTYLE: "Numpad/@Numpad"     "styleAsItalic")
     (TEXSTYLE: "Numpad/(S)@Numpad"  "styleAsSlant")                    
     
     (abbrev  "f"                "\\footnote{}")
     (abbrev  "s"                "\\section{}")
     (abbrev  "ss"               "\\subsection{}")
     (abbrev  "sss"              "\\subsubsection{}"))




